<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td>
    <% if user.manager? %>
      <%= t "users.roles.manager" %>
    <% else %>
      <%= t "users.roles.user" %>
    <% end %>
  </td>
  <td><%= user.department_name if user.department.present? %></td>
  <td>
    <%= link_to manager_user_path(user), class: "btn btn-sm btn-outline-primary", title: t("users.index.show") do %>
      <i class="fas fa-eye"></i>
    <% end %>
  </td>
</tr>
