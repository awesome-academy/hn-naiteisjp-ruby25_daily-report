<h2 class="text-center mb-4"><%= t("dashboard.title") %></h2>

<div class="container mt-4">
  <div class="row">
    <div class="col-md-4 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <i class="bi bi-person"></i> <%= t("dashboard.manager.user_info") %>
        </div>
        <div class="card-body">
          <p><strong><%= t("dashboard.manager.name") %>:</strong> <%= current_user.name %></p>
          <p><strong><%= t("dashboard.manager.email") %>:</strong> <%= current_user.email %></p>
          <p><strong><%= t("dashboard.manager.role") %>:</strong> <%= current_user.role.humanize %></p>
          <p><strong><%= t("dashboard.manager.phone") %>:</strong> <%= current_user.phone_number %></p>
          <p><strong><%= t("dashboard.manager.address") %>:</strong> <%= current_user.address %></p>
        </div>
      </div>
    </div>

    <!-- Department Info -->
    <div class="col-md-8 mb-3">
      <div class="card shadow-sm">
        <div class="card-header bg-success text-white">
          <i class="bi bi-building"></i> <%= t("dashboard.manager.department_info") %>
        </div>
        <div class="card-body">
          <% if @department.present? %>
            <ul class="list-group">
              <li class="list-group-item">
                <strong><%= t("dashboard.manager.department_name") %>:</strong> <%= @department.name %>
              </li>
              <li class="list-group-item">
                <strong><%= t("departments.show.active_users_count") %>:</strong> <%= @active_users_count %>
              </li>
              <li class="list-group-item">
                <strong><%= t("dashboard.manager.pending_reports") %>:</strong> <%= @pending_reports_count %>
              </li>
            </ul>
          <% else %>
            <div class="alert alert-warning mb-0">
              <i class="bi bi-exclamation-triangle"></i>
              <%= t("departments.show.no_department") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
