<% provide(:title, t("session.login.title")) %>

<div class="login-wrapper">
  <div class="login-box">
    <h1><%= t("session.login.title") %></h1>

    <%= form_with(url: login_path, scope: :session, html: { class: "login-form" }) do |f| %>
      <div class="form-group">
        <%= f.email_field :email, placeholder: t("session.login.email_placeholder"), class: "form-input" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password, placeholder: t("session.login.password_placeholder"), class: "form-input" %>
      </div>

      <div class="form-group checkbox-group">
        <%= f.check_box :remember_me, id: "remember_me" %>
        <%= f.label :remember_me, t("session.login.remember_me"), for: "remember_me" %>
      </div>

      <div class="form-group center">
        <%= f.submit t("session.login.submit_btn"), class: "btn-login" %>
      </div>
    <% end %>
  </div>
</div>
