<h1 class="text-center"><%= t "users.new.title" %></h1>

<%= form_with model: [:admin, @user], url: admin_users_path, method: :post, local: true do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.label :name, t("users.form.name") %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email, t("users.form.email") %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <%= f.hidden_field :password, value: @generated_password %>

  <div class="form-group">
    <%= f.label :role, t("users.form.role") %>
    <%= f.select :role, ["user", "manager"].map { |r| [r.humanize, r] }, {}, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :active, t("users.form.active"), class: "form-check-label" %>
    <%= f.check_box :active, class: "form-check-input" %>
  </div>

  <div class="form-group">
    <%= f.label :department_id, t("users.form.department") %>
    <%= f.select :department_id, department_options_for_edit, { include_blank: false }, class: "form-control" %>
  </div>

  <%= f.submit t("users.form.save"), class: "btn btn-primary" %>
  <%= link_to t("edit.cancel"), admin_users_path, class: "btn btn-secondary ms-2" %>
<% end %>
