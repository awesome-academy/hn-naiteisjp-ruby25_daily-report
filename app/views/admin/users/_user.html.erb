<tr>
  <td><%= pagy.from + local_assigns[:user_counter] %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= user.department_name if user.department.present? %></td>
  <td>
    <% if user.manager? %>
      <%= t "users.roles.manager" %>
    <% elsif user.user? %>
      <%= t "users.roles.user" %>
    <% end %>
  </td>
  <td>
    <% if user.active? %>
      <span class="badge badge-success"><%= t "users.active" %></span>
    <% else %>
      <span class="badge badge-secondary"><%= t "users.inactive" %></span>
    <% end %>
  </td>
  <td>
    <%= admin_user_action_buttons user %>
  </td>
</tr>
