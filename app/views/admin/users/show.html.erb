<h1 class="text-center"><%= t "users.edit.title" %></h1>

<div class="form-group">
  <strong><%= t("users.form.name") %>:</strong>
  <span><%= @user.name %></span>
</div>

<div class="form-group">
  <strong><%= t("users.form.email") %>:</strong>
  <span><%= @user.email %></span>
</div>

<div class="form-group">
  <strong><%= t("users.form.role") %>:</strong>
  <span><%= @user.role.humanize %></span>
</div>

<div class="form-group">
  <strong><%= t("users.form.department") %>:</strong>
  <span><%= @user.department&.name %></span>
</div>

<%= link_to t("edit.cancel"), admin_users_path, class: "btn btn-secondary ms-2" %>
